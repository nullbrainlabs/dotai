---
const route = Astro.locals.starlightRoute;
const rawMarkdown = route.entry.body ?? "";
const isSplash = route.entry.data.template === "splash";
---

<div class="page-title-row">
	<h1 id="_top">{route.entry.data.title}</h1>
	{!isSplash && rawMarkdown && (
		<button
			class="copy-md-btn"
			data-markdown={rawMarkdown}
			title="Copy as Markdown"
			aria-label="Copy as Markdown"
		>
			<svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
				<rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
				<path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
			</svg>
			<svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<polyline points="20 6 9 17 4 12"></polyline>
			</svg>
		</button>
	)}
</div>

<script is:inline>
	(function () {
		var btn = document.querySelector(".copy-md-btn");
		if (!btn) return;

		btn.addEventListener("click", function () {
			var md = btn.getAttribute("data-markdown") || "";
			function onCopied() {
				btn.classList.add("copied");
				setTimeout(function () {
					btn.classList.remove("copied");
				}, 1500);
			}
			if (navigator.clipboard && navigator.clipboard.writeText) {
				navigator.clipboard.writeText(md).then(onCopied).catch(function () {
					fallbackCopy(md);
					onCopied();
				});
			} else {
				fallbackCopy(md);
				onCopied();
			}
		});

		function fallbackCopy(text) {
			var ta = document.createElement("textarea");
			ta.value = text;
			ta.style.position = "fixed";
			ta.style.opacity = "0";
			document.body.appendChild(ta);
			ta.select();
			document.execCommand("copy");
			document.body.removeChild(ta);
		}
	})();
</script>

<style>
	@layer starlight.core {
		h1 {
			margin-top: 1rem;
			font-size: var(--sl-text-h1);
			line-height: var(--sl-line-height-headings);
			font-weight: 600;
			color: var(--sl-color-white);
		}
	}

	.page-title-row {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		gap: 1rem;
	}

	.copy-md-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.25rem;
		margin-top: 1.25rem;
		color: var(--sl-color-gray-3);
		background: none;
		border: none;
		border-radius: 0.25rem;
		cursor: pointer;
		flex-shrink: 0;
		transition: color 0.15s ease;
	}

	.copy-md-btn:hover {
		color: var(--sl-color-white);
	}

	.copy-md-btn .check-icon {
		display: none;
	}

	.copy-md-btn.copied .copy-icon {
		display: none;
	}

	.copy-md-btn.copied .check-icon {
		display: block;
		color: hsl(140, 60%, 55%);
	}
</style>
