---
const { siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title sl-flex" translate="no">
	<span class="dot">.</span><span class="wordmark">ai</span>
</a>

<style>
	@layer starlight.core {
		.site-title {
			align-items: center;
			gap: 0;
			font-family: "Geist Mono", ui-monospace, monospace;
			font-size: calc(var(--sl-text-h4) * 1.3);
			font-weight: 700;
			letter-spacing: -0.08em;
			text-decoration: none;
			white-space: nowrap;
			min-width: 0;
		}
	}

	.dot {
		color: var(--sl-color-accent);
		font-size: 1.4em;
		line-height: 1;
		position: relative;
		top: -0.12em;
		margin-right: -0.09em;
	}

	.wordmark {
		color: var(--sl-color-white);
		letter-spacing: -0.02em;
	}
</style>
